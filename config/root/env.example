# Bot Trading v10 Enterprise - Environment Variables
# =================================================

# Bitget Exchange Credentials
BITGET_API_KEY=your_api_key_here
BITGET_SECRET_KEY=your_secret_key_here
BITGET_PASSPHRASE=your_passphrase_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379
TIMESCALEDB_URL=postgresql://postgres:password@localhost:5432/trading_bot

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=trading_bot

# Monitoring Configuration
PROMETHEUS_PORT=8001
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SECRETS_ENABLED=false

# Security Configuration
CONFIG_ENCRYPTION_KEY=your_32_byte_encryption_key_here
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token

# Trading Configuration
DEFAULT_LEVERAGE=10
MAX_LEVERAGE=30
MIN_LEVERAGE=5
RISK_PER_TRADE=2.0
MAX_DRAWDOWN=15.0

# ML Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=trading_bot_v10
OPTUNA_STORAGE=sqlite:///optuna.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/bot.log

# Compliance Configuration
AUDIT_LOG_ENABLED=true
DATA_RETENTION_YEARS=7
MIFID2_ENABLED=true
GDPR_ENABLED=true

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=1000
CACHE_TTL=300
HEALTH_CHECK_INTERVAL=30

# Development Configuration
DEBUG=false
TESTING=false
MOCK_EXCHANGE=false