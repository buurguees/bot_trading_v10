# Bot Trading v10 - Configuración de APIs
# ========================================

# Bitget Exchange API (Requerido para trading)
BITGET_API_KEY=your_bitget_api_key_here
BITGET_SECRET_KEY=your_bitget_secret_key_here
BITGET_PASSPHRASE=your_bitget_passphrase_here

# Binance Exchange API (Opcional - para datos históricos)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Configuración de Trading
TRADING_MODE=paper  # paper, live
DEFAULT_LEVERAGE=10
MAX_LEVERAGE=30
MIN_LEVERAGE=5

# Configuración de Símbolos
DEFAULT_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT,SOLUSDT,DOGEUSDT
ADDITIONAL_SYMBOLS=AVAXUSDT,TONUSDT,BNBUSDT,XRPUSDT,LINKUSDT

# Configuración de Base de Datos
DATABASE_URL=sqlite:///data/trading_bot.db
TIMESCALE_URL=postgresql://user:password@localhost:5432/trading_bot

# Configuración de Redis
REDIS_URL=redis://localhost:6379/0

# Configuración de Monitoreo
PROMETHEUS_PORT=8003
GRAFANA_PORT=3000

# Configuración de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Configuración de Seguridad
ENCRYPTION_KEY=your_32_character_encryption_key_here
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# Configuración de Notificaciones
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Configuración de AWS (Opcional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Configuración de Desarrollo
DEBUG=False
TEST_MODE=False
