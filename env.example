# Bot Trading v10 Enterprise - Variables de Entorno
# =================================================
# IMPORTANTE: Copia este archivo como .env y configura tus valores

# ===========================================
# API KEYS DE BITGET
# ===========================================
# Obtén tus API keys desde: https://www.bitget.com/account/api
BITGET_API_KEY=tu_api_key_aqui
BITGET_SECRET_KEY=tu_secret_key_aqui
BITGET_PASSPHRASE=tu_passphrase_aqui

# ===========================================
# BOT DE TELEGRAM
# ===========================================
# Crea un bot con @BotFather en Telegram
TELEGRAM_BOT_TOKEN=tu_bot_token_aqui
TELEGRAM_CHAT_ID=tu_chat_id_aqui

# ===========================================
# BASE DE DATOS
# ===========================================
DATABASE_URL=sqlite:///data/trading_bot.db
# Para PostgreSQL (opcional):
# DATABASE_URL=postgresql://usuario:password@localhost:5432/trading_bot

# ===========================================
# CONFIGURACIÓN DE TRADING
# ===========================================
TRADING_MODE=paper  # paper, live, backtest
DEFAULT_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT
RISK_PER_TRADE=2.0
MAX_DAILY_LOSS=5.0

# ===========================================
# CONFIGURACIÓN DE IA
# ===========================================
MIN_CONFIDENCE=65.0
MODEL_UPDATE_INTERVAL=3600  # segundos
TRAINING_ENABLED=true

# ===========================================
# MONITOREO Y LOGS
# ===========================================
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
DASHBOARD_PORT=8050
METRICS_INTERVAL=300  # segundos

# ===========================================
# SEGURIDAD
# ===========================================
ENCRYPTION_KEY=tu_clave_encriptacion_aqui
JWT_SECRET=tu_jwt_secret_aqui
VAULT_ENABLED=false

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
DEBUG=false
TESTING=false
DEVELOPMENT=false

# ===========================================
# CONFIGURACIÓN DE RED
# ===========================================
API_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT=100  # requests per minute

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS
# ===========================================
DATA_DIR=data/
LOGS_DIR=data/logs/
MODELS_DIR=data/models/
BACKUP_DIR=data/backups/

# ===========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ===========================================
NOTIFICATIONS_ENABLED=true
ALERT_EMAIL=tu_email@ejemplo.com
DISCORD_WEBHOOK=tu_discord_webhook_aqui

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # segundos (24 horas)
BACKUP_RETENTION=7  # días

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================
CACHE_ENABLED=true
CACHE_TTL=3600  # segundos
REDIS_URL=redis://localhost:6379/0

# ===========================================
# CONFIGURACIÓN DE ENTRENAMIENTO
# ===========================================
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=100
TRAINING_LEARNING_RATE=0.001
TRAINING_VALIDATION_SPLIT=0.2

# ===========================================
# CONFIGURACIÓN DE OPTIMIZACIÓN
# ===========================================
OPTIMIZATION_ENABLED=false
OPTIMIZATION_TRIALS=100
OPTIMIZATION_TIMEOUT=3600  # segundos

# ===========================================
# CONFIGURACIÓN DE ENTERPRISE
# ===========================================
ENTERPRISE_MODE=false
CLUSTER_MODE=false
LOAD_BALANCER_ENABLED=false
